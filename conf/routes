# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index()

GET         /login                  controllers.UserController.loginPage()
POST        /login                  controllers.UserController.loginProcessing()
GET         /logout                 controllers.UserController.logoutProcessing()
GET         /signup                 controllers.UserController.signUpPage()
POST        /signup                 controllers.UserController.signUpProcessing()

GET         /sweats/timeline        controllers.SweatController.timeline()
POST        /sweats/new             controllers.SweatController.create()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
